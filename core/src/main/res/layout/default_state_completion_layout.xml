<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3000000"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player_completion"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/default_replay_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_round_button"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        android:paddingStart="11dp"
        android:paddingTop="5dp"
        android:paddingEnd="14dp"
        android:paddingBottom="5dp"
        android:text="@string/player_replay"
        android:textColor="#333333"
        android:textSize="14sp"
        app:drawableStartCompat="@drawable/ic_action_refresh" />
</LinearLayout>